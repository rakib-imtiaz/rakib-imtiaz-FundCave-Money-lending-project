<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatController">
   <children>
      <ListView fx:id="messageList" prefHeight="350.0" prefWidth="600.0" />
      <TextField fx:id="messageInput" prefHeight="63.0" prefWidth="600.0" promptText="Type your message here..." />
      <Button mnemonicParsing="false" onAction="#sendMessage" prefHeight="25.0" prefWidth="75.0" text="Send" />
   </children>
</VBox>
